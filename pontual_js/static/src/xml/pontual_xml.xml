<?xml version="1.0" encoding="UTF-8"?>

<template xml:space="preserve">
    <t t-name="pontualdashboard">
        <div class="container-fluid">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
            <script src="https://cdn.jsdelivr.net/npm/chart.js?version=3.7.0"></script>
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"/>
            <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

            <style>
                .border-left-info {
                    border-left: .55rem solid #36b9cc !important;
                }

                 .card-hover {
                     transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
                 }

                .border-left-success {
                    border-left: .55rem solid #71639e !important;
                }

                .card-hover:hover {
                   transform: scale(1.05);
                   box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
                }

                custom-prents{
                background-color: #1cc88a !important;
                color: #212529;
                }

                .text-success-custom{
                    color: rebeccapurple !important;
                }


                .text-warning-custom{
                         color: #15d3d3 !important;
                }

                .custom-atrsos{
                background-color: #36b9cc !important;
                color: #212529;
                }

                 .container-fluid{
                   max-width: 1840px !important;
                 }

                .border-left-danger {
                    border-left: .55rem solid #e74a3b !important;
                }

                .border-left-primary {
                    border-left: .55rem solid #4e73df !important;
                }

                html .o_web_client > .o_action_manager {
                    overflow: auto !important;
                    margin-bottom: 20px;
                }

                .icon-container {
                    width: 50px;
                    height: 50px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    border-radius: 50%;
                    background: rgba(0, 0, 0, 0.1);
                }

                .myPieChart {
                    height: 372px !important;
                    display: initial !important;
                }
            </style>

            <h1 class="text-center my-4">Painel de Presença</h1>



            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"/>
            <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

            <div class="row">

                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-4 card-hover">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Presentes
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold fs-2 text-gray-800"> <span
                                            style="font-size: 40px;" class="fs-2" id="total_presents"> 0</span> </div>
                                </div>
                                <div class="col-auto">
                                    <div class="icon-container">
                                        <i class="fas fa-users fa-2x text-gray-600"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card border-left-danger shadow h-100 py-4  card-hover">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                        Ausentes
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        <span id="total_absents" style="font-size: 40px;"> 0 </span>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <div class="icon-container">
                                        <i class="fas fa-user-slash fa-2x text-gray-600"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-4  card-hover">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Atrasos
                                    </div>
                                    <div class="row no-gutters align-items-center">
                                        <div class="col-auto">
                                            <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                                              <span style="font-size: 40px;" id="total_atrasos"></span>
                                            </div>
                                        </div>
                                        <div class="col">

                                        </div>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <div class="icon-container">
                                        <i class="fas fa-clock fa-2x text-gray-600"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-xl-8 col-lg-7">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center ">
                            <h6 class="m-0 font-weight-bold text-primary">Area Chart</h6>
                            <span class="badge badge-info">Últimos 7 dias</span>
                        </div>
                        <div class="card-body">
                            <div class="chart-area">
                                 <canvas id="myLineChart" height="400"></canvas>
                            </div>
                            <hr/>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-5">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                            <h6 class="m-0 font-weight-bold text-primary">Donut Chart</h6>
                            <span class="badge badge-warning">Últimas 24 horas</span>
                        </div>

                        <div class="card-body">
                            <div class="chart-pie pt-4 text-center">
                                <canvas id="myPieChart" height="200" class="myPieChart"></canvas>
                            </div>
                            <hr/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
               <div class="col-lg-6 mb-4">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                            <h6 class="m-0 font-weight-bold text-primary">Monitoramento de Assiduidade</h6>
                            <span class="badge badge-info">Últimos 30 dias</span>
                        </div>
                        <div class="card-body">

                            <div class="d-flex justify-content-around text-center mb-3">
                                    <div>
                                        <h5 class="text-success-custom">
                                            <i class="fas fa-user-check"></i>
                                            40%</h5>
                                        <small>Presentes (120 funcionários)</small>
                                    </div>
                                <div>
                                        <h5 class="text-danger"><i class="fas fa-user-times"></i>
                                            20%</h5>
                                    <small>Ausentes (30 funcionários)</small>
                                    </div>
                                <div>
                                        <h5 class="text-warning-custom"><i class="fas fa-clock"></i>
                                            60%</h5>
                                    <small>Atrasos (90 funcionários)</small>
                                    </div>
                            </div>


                            <h4 class="small font-weight-bold">Presentes <span class="float-right">40%</span></h4>
                            <div class="progress mb-3">
                                <div class="progress-bar  custom-prents" role="progressbar" style="width: 40%"
                                     aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>

                            <h4 class="small font-weight-bold">Ausentes <span class="float-right">20%</span></h4>
                            <div class="progress mb-3">
                                <div class="progress-bar bg-danger" role="progressbar" style="width: 20%"
                                     aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>

                            <h4 class="small font-weight-bold">Atrasos <span class="float-right">60%</span></h4>
                            <div class="progress">
                                <div class="progress-bar custom-atrsos" role="progressbar" style="width: 60%"
                                     aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>


                            <div class="alert alert-danger mt-5" role="alert">
                                 João da Silva teve 5 faltas nos últimos 30 dias! 🚨
                            </div>

                            <button class="btn btn-primary mt-1 mb-2"><i class="fas fa-file-download"></i>
                                Exportar Dados</button>

                        </div>


                      </div>
               </div>


                <div class="col-lg-6 mb-4">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                             <h6 class="m-0 font-weight-bold text-primary">Gráfico de Barras</h6>
                            <span class="badge badge-info">Últimos 30 dias</span>
                        </div>

                        <div class="card-body">
                                <div class="chart-bar">
                                    <canvas id="myBarChart" height="300"></canvas>
                                </div>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </t>
</template>
