<?xml version="1.0" encoding="UTF-8" ?>

<template xml:space="preserve">

    <t t-name="reportabledynamics">

        <div class="container-fluid mt-5">
              <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet"/>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

            <h1 class="mb-4 fw-bold">Resumo de Saldos</h1>

            <div class="row">
            <div class="col-8">
                <table class="table table-borderless table-hover">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th id="revenueName">Nome</th>
                            <th>Saldo Atual</th>
                            <th>Ano</th>
                        </tr>
                    </thead>
                    <thead class="bg-light text-white">
                        <tr>
                            <th class="text-black" id="subRevenueTypeName"><p style="font-size: 18px;" class="text-black">Tipo de Subreceita</p></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Iva</td>
                            <td>$20</td>
                            <td>2024</td>
                        </tr>
                        <tr>
                            <td>John</td>
                            <td>$50</td>
                            <td>2024</td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr class="bg-light">
                            <th>Total</th>
                            <th>$275</th>
                        </tr>
                    </tfoot>
                </table>

            </div>

                <div class="col-4">
                <div class="date-ranges mb-3" id="dateRangeInputs">
                    <label for="revenueTypes" class="form-label">Tipo de Receita</label>
                    <select id="revenueTypes" class="form-control mb-2 select2">
                        <option value="">Selecione o relatorio</option>
                        <option value="Tipo 1">Tipo 1</option>
                        <option value="Tipo 2">Tipo 2</option>
                        <option value="Tipo 3">Tipo 3</option>
                    </select>

                    <label for="subRevenueType" class="form-label">Tipo de Subreceita</label>
                    <select id="subRevenueType" class="form-control mb-2">
                        <option value="" disabled="disabled" selected="selected">Selecione um tipo de subreceita
                        </option>
                        <option value="Subtipo 1">Subtipo 1</option>
                        <option value="Subtipo 2">Subtipo 2</option>
                        <option value="Subtipo 3">Subtipo 3</option>
                    </select>

                    <button class="mt-2 btn btn-primary rounded" id="applyButton">Aplicar</button>
                </div>
            </div>
        </div>


    </div>

    </t>

</template>
